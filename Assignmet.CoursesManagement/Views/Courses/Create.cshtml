@model Assignmet.CoursesManagement.Application.Commands.CreateCourseCommand

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create new course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseType" class="control-label"> Course Type</label>
                <br />
                <select asp-for="CourseType" asp-items="@Html.GetEnumSelectList(typeof(Assignment.CoursesManagement.Core.CourseType))">
                    <option selected="selected" value="">Please, select course type</option>
                </select>
                <br />
                <span asp-validation-for="CourseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Selected Students</h5>
                @for (int i = 0; i < Model.Students.Count; i++)
                {
                    @Html.HiddenFor(m => m.Students[i].Name)
                    @Html.HiddenFor(m => m.Students[i].StudentId)
                    @Html.CheckBoxFor(m => m.Students[i].IsSelected)
                    @Html.Label(Model.Students[i].Name)
                    <br />
                }
            </div>

            <input type="submit" value="Submit" />
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

